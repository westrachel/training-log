<form action="/training_log/<%= @page_number %>/workouts/<%= @workout[:id] %>/exercises/new" method="post">
  <div>
    <label for="exercise_des">Exercise Description:
      <input name="exercise_desc" id="exercise_desc" value="Bench Press, Squats, etc."/>
    </label>
  </div>
  <div>
  <div>
    <label for="number_sets">Number of Sets:
      <input name="number_sets" id="number_sets" type="number" min="1" max="10" value="3"/>
    </label>
  </div>
  <div>
    <label for="number_reps">Number of Reps:
      <input name="number_reps" id="number_reps" type="number" min="1" max="20" value="8"/>
    </label>
  </div>
  <div>
    <label for="weights_used">Weight Description:
      <input name="weights_used" id="weights_used" value="i.e. 100 lbs"/>
    </label>
  </div>
  <button type="submit">Add Exercise</button>
</form>

<form action="/training_log/<%= @page_number %>/workouts/<%= @workout[:id] %>" method="get">
  <button type="submit">Cancel</button>
</form>
