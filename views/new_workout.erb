<div class="box">
  <div class="details">
    <form action="/training_log/<%= new_workouts_page_num %>/workouts/new_workout_id" method="post">
      <label for="workout_name">Workout Name:<br />
        <input 
          class="new-workout-input" 
          name="workout_name" 
          id="workout_name" 
          value="Push Day, Pull Day, etc."/>
      </label>
      <br/>
      <label for="workout_date">Date Workout Was Completed:<br />
        <input 
          class="new-workout-input" 
          type="date" 
          id="workout_date" 
          name="workout_date"
          value="2022-05-16" 
          min="2018-01-01" 
          max="2050-12-31"/>
      </label>
      <br/>
      <button class="enter" type="submit">Log Workout</button>
    </form>
    
    <form action="/training_log/<%= @page_number %>/workouts" method="get">
      <button class="enter" type="submit">Cancel</button>
    </form>
  </div>
</div>
